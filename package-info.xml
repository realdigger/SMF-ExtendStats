<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>digger:ExtendStats</id>
	<name>ExtendStats</name>
	<version>1.2</version>
	<type>modification</type>

	<install for="1.1 - 1.1.99">
 		<readme type="inline">This mod adds some extend stats for members.</readme>
		<modification>modification.xml</modification>
		<code type="file">install.php</code>
	</install>

	<uninstall  for="1.1 - 1.1.99">
		<readme type="inline">This will remove ExtendStats</readme>
		<modification reverse="true">modification.xml</modification>
	</uninstall>
</package-info>
